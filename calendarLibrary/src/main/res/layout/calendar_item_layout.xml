        <TextView
            android:id="@+id/textView_number"
            android:layout_width="wrap_content"
            android:textColor="#344154"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="31" />
    </FrameLayout>
</LinearLayout>